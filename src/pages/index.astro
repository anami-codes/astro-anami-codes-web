---
const pageTitle = "Home";
const banner = "banner";
const maxPosts = 3;

import SimpleLayout from '../layouts/SimpleLayout.astro';

import SocialBtn from '../components/snippets/socialBtn.astro';
import GameBtn from '../components/snippets/gameBtn.astro';
import ProjectBtn from '../components/snippets/projectBtn.astro';
import DevlogShowcase from '../components/devlogShowcase.astro';

import '../styles/landing.css';

import { getCollection } from 'astro:content';
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
