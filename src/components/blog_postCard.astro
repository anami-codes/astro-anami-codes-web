---
const {title, url, date, description, tags} = Astro.props
import FixedDate from './format/date.astro';
import FixedTags from './format/tagList.astro';
---

<div class="pretty-box card-container green">
    <div class="card">
        <div class="card-header">
            <div style="margin: 0px 15px 4px 15px;">
                <h3><a href={url}>{title}</a></h3>
                <div class="txt-s"><FixedDate date={date} /></div>
            </div>
        </div>
        <div class="card-body hide-oveflow">
            {description}
        </div>
        <div class="card-footer hide-oveflow">
            <p class="txt-s" style="margin: auto 5px; color: var(--black)">
                <FixedTags tags={tags} />
            </p>
        </div>
    </div>
</div>